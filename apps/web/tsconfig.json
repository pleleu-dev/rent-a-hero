{
	"exclude": [
		"node_modules"
	],
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/.server/**/*.ts",
		"**/.server/**/*.tsx",
		"**/.client/**/*.ts",
		"**/.client/**/*.tsx"
	],
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"declaration": true,
		"declarationMap": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"lib": [
			"es2022",
			"dom",
			"dom.iterable"
		],
		"types": [
			"@remix-run/node",
			"vite/client"
		],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./app/*"
			]
		}
	}
}
